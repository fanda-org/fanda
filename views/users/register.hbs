{{assign 'title' 'Register'}}

<div class="row">
  <div class="col col-login mx-auto">
    <div class="header-brand text-center mb-4">
      <img src="/demo/logo.svg" class="h-6" alt=""> Fanda
    </div>
    <form class="card" action="/users/register" method="post">
      <div class="card-body">
        <div class="card-title">Create new account</div>
        <div class="form-group">
          <label class="form-label">Name</label>
          <input type="text" class="form-control" id="userName" name="userName" value='{{model.userName}}'
            placeholder="Enter name" autofocus required>
        </div>
        <div class="form-group">
          <label class="form-label">Email address</label>
          <input type="email" class="form-control" id="email" name="email" value='{{model.email}}'
            placeholder="Enter email" required>
        </div>
        <div class="form-group">
          <label class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" value='{{model.password}}'
            placeholder="Password" required>
        </div>
        <div class="form-group">
          <label class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="agreeTerms" name="agreeTerms" />
            <span class="custom-control-label">Agree the <a href="/terms">terms and policy</a></span>
          </label>
        </div>
        <div class="form-footer">
          <button type="submit" class="btn btn-primary btn-block">Create new account</button>
        </div>
      </div>
    </form>
    <div class="text-center text-muted">
      Already have account? <a href="/users/login">Sign in</a>
    </div>
  </div>
</div>